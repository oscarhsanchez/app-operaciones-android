<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyCardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/inc_tipo"
            android:layout_width="@dimen/dp15"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/inc_estado"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TableLayout
            android:id="@id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/inc_tipo"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="10dp">

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:gravity="left|center"
                    android:text="@string/ubicacion_"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/inc_ubicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="4"
                    android:textColor="@color/text_gray_alpha"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/icon_own"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_own"
                    android:visibility="gone"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:gravity="left|center"
                    android:text="@string/tipo_medio_"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/inc_tipo_medio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textColor="@color/text_gray_alpha"
                    android:textSize="@dimen/sp14" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:gravity="left|center"
                    android:text="@string/posicion_"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/inc_posicion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textColor="@color/text_gray_alpha"
                    android:textSize="@dimen/sp14" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:gravity="left|center"
                    android:text="@string/fecha_limite_"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/inc_fecha_limite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textColor="@color/text_gray_alpha"
                    android:textSize="@dimen/sp14" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/inc_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/table"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="left|center"
            android:paddingBottom="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp14" />


    </RelativeLayout>
</android.support.v7.widget.CardView>